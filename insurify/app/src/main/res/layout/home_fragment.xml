<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">

    <include
        android:id="@+id/user_profile"
        layout="@layout/layout_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/idOflayout_policies"
        layout="@layout/layout_policies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_profile" />

    <include
        android:id="@+id/idOflayout_offers"
        layout="@layout/layout_offers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idOflayout_policies" />

    <include
        android:id="@+id/idOflayout_quick_access"
        layout="@layout/layout_quick_access"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/idOflayout_offers"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="16dp" />
</RelativeLayout>