<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlArrowDown"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ui.support.SupportFragment">

            <androidx.cardview.widget.CardView
                android:id="@+id/whatsAppCarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                cardView:cardCornerRadius="8dp"
                cardView:cardBackgroundColor="@color/white"
                cardView:cardElevation="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:text="Instant Policy Support "
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        cardView:layout_constraintStart_toStartOf="parent"
                        cardView:layout_constraintTop_toBottomOf="@+id/appCompatImageView" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/appCompatImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        cardView:layout_constraintEnd_toEndOf="parent"
                        cardView:layout_constraintHorizontal_bias="0.498"
                        cardView:layout_constraintStart_toStartOf="parent"
                        cardView:layout_constraintTop_toTopOf="parent"
                        cardView:srcCompat="@drawable/whatsapp" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="9191919191"
                        cardView:layout_constraintStart_toStartOf="@+id/textView"
                        cardView:layout_constraintTop_toBottomOf="@+id/textView" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Say Hi!!, We are here for you"
                        cardView:layout_constraintStart_toStartOf="@+id/textView3"
                        cardView:layout_constraintTop_toBottomOf="@+id/textView3" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/claimQuery"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                cardView:cardBackgroundColor="@color/white"
                cardView:cardCornerRadius="8dp"
                cardView:cardElevation="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/claimSupportTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/claim_support"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        cardView:layout_constraintStart_toStartOf="parent"
                        cardView:layout_constraintTop_toBottomOf="@+id/imgClaimSupport" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgClaimSupport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        cardView:layout_constraintEnd_toEndOf="parent"
                        cardView:layout_constraintHorizontal_bias="0.498"
                        cardView:layout_constraintStart_toStartOf="parent"
                        cardView:layout_constraintTop_toTopOf="parent"
                        cardView:srcCompat="@drawable/claim" />

                    <TextView
                        android:id="@+id/txtPhone1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="9191919191"
                        cardView:layout_constraintEnd_toEndOf="@+id/claimSupportTitle"
                        cardView:layout_constraintTop_toBottomOf="@+id/claimSupportTitle" />

                    <TextView
                        android:id="@+id/txtPhone2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="9292929292"
                        cardView:layout_constraintStart_toStartOf="@+id/claimSupportTitle"
                        cardView:layout_constraintTop_toBottomOf="@+id/claimSupportTitle" />

                    <View
                        android:id="@+id/textView5"
                        android:layout_width="1dp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginTop="16dp"
                        android:background="@color/colorPrimary"
                        cardView:layout_constraintEnd_toStartOf="@+id/txtPhone1"
                        cardView:layout_constraintStart_toEndOf="@+id/txtPhone2"
                        cardView:layout_constraintTop_toBottomOf="@+id/claimSupportTitle" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/travelIns"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                cardView:cardCornerRadius="8dp"
                cardView:cardBackgroundColor="@color/white"
                cardView:cardElevation="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/travelSupportTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/claim_support"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        cardView:layout_constraintStart_toStartOf="parent"
                        cardView:layout_constraintTop_toBottomOf="@+id/imgTravelSupport" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgTravelSupport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        cardView:layout_constraintEnd_toEndOf="parent"
                        cardView:layout_constraintHorizontal_bias="0.498"
                        cardView:layout_constraintStart_toStartOf="parent"
                        cardView:layout_constraintTop_toTopOf="parent"
                        cardView:srcCompat="@drawable/claim" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtNote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:text="0808080808"
                        cardView:layout_constraintStart_toEndOf="@+id/imageView"
                        cardView:layout_constraintTop_toBottomOf="@+id/travelSupportTitle" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        cardView:layout_constraintStart_toStartOf="@+id/travelSupportTitle"
                        cardView:layout_constraintTop_toBottomOf="@+id/travelSupportTitle"
                        cardView:srcCompat="@drawable/phone_call" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/country_code"
                        cardView:layout_constraintStart_toStartOf="@+id/imageView"
                        cardView:layout_constraintTop_toBottomOf="@+id/txtNote" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Call us on India land line number"
                        cardView:layout_constraintStart_toStartOf="@+id/textView6"
                        cardView:layout_constraintTop_toBottomOf="@+id/textView6" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="+91-7171717171"
                        cardView:layout_constraintStart_toStartOf="@+id/textView7"
                        cardView:layout_constraintTop_toBottomOf="@+id/textView7" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/carInsu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                cardView:cardCornerRadius="8dp"
                cardView:cardElevation="8dp"
                cardView:cardBackgroundColor="@color/white"
                android:layout_marginBottom="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/automobileSupportTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:text="Motor Insurance Add on Emergency Assist"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        cardView:layout_constraintStart_toStartOf="parent"
                        cardView:layout_constraintTop_toBottomOf="@+id/imgAutomobileSupport" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgAutomobileSupport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        cardView:layout_constraintEnd_toEndOf="parent"
                        cardView:layout_constraintHorizontal_bias="0.498"
                        cardView:layout_constraintStart_toStartOf="parent"
                        cardView:layout_constraintTop_toTopOf="parent"
                        cardView:srcCompat="@drawable/car_24" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtAutomobileNote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:text="3232323232"
                        cardView:layout_constraintStart_toEndOf="@+id/automobileImageView"
                        cardView:layout_constraintTop_toBottomOf="@+id/automobileSupportTitle" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/automobileImageView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        cardView:layout_constraintStart_toStartOf="@+id/automobileSupportTitle"
                        cardView:layout_constraintTop_toBottomOf="@+id/automobileSupportTitle"
                        cardView:srcCompat="@drawable/phone_call" />

                    <TextView
                        android:id="@+id/automobileTextView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/country_code"
                        cardView:layout_constraintStart_toStartOf="@+id/automobileImageView"
                        cardView:layout_constraintTop_toBottomOf="@+id/txtAutomobileNote" />

                    <Button
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="EMERGENCY SUPPORT"
                        cardView:layout_constraintEnd_toEndOf="parent"
                        cardView:layout_constraintStart_toStartOf="parent"
                        cardView:layout_constraintTop_toBottomOf="@+id/automobileTextView6" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
